<odoo>

    <record model="ir.ui.view" id="res_config_settings_form_view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="contract.res_config_settings_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='create_new_line_at_contract_line_renew']/parent::div/parent::div"
                   position="after">
                <div class="col-12 col-lg-6 o_setting_box"
                         title="Asset default values.">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Forecasts</span>
                            <span class="fa fa-lg fa-building-o"
                                  title="Values set here are company-specific."
                                  aria-label="Values set here are company-specific."
                                  groups="base.group_multi_company"
                                  role="img"/>
                            <div class="content-group">
                                <div class="row mt16">
                                    <field name="enable_contract_forecast"/>
                                    <label string="Enable forecasts"
                                           for="enable_contract_forecast"
                                           class="col-lg-3 o_light_label"/>
                                </div>
                                <div class="row">
                                    <label string="Forecast Interval"
                                           for="contract_forecast_interval"
                                           class="col-lg-3 o_light_label"/>
                                    <field name="contract_forecast_interval"/>
                                    <field name="contract_forecast_rule_type"/>
                                </div>
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>


</odoo>
